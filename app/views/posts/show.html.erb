<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<p>
  <b>Comments:</b>
  <% @post.comments.each do |comment| %>
    <li><%= comment.author %> wrote "<%= comment.body %>" at <%= comment.created_at %></li>
  <% end %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
